{
  "name": "jinge-compiler",
  "version": "3.1.1",
  "description": "A Messenger, Proxy and Compiler based MVVM framework",
  "main": "lib/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build:g4": "node ./scripts/parse_g4.js",
    "build:compiler": "rm -rf ./lib && node ./scripts/esbuild.js",
    "build": "npm run build:g4 && npm run build:compiler",
    "dev": "WATCH=true npm run build:compiler",
    "lint": "tsc --noEmit && eslint './{src,scripts}/**/*.{js,ts}' --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jingeweb/jinge-compiler.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/jingeweb/jinge-compiler#readme",
  "bugs": {
    "url": "https://github.com/jingeweb/jinge-compiler/issues"
  },
  "keywords": [
    "mvvm",
    "spa"
  ],
  "author": "Yuhang Ge <abeyuhang@gmail.com>",
  "dependencies": {
    "acorn": "^8.7.1",
    "acorn-walk": "^8.2.0",
    "antlr4-build": "4.10.1-beta.10",
    "csv-parse": "^5.1.0",
    "csv-stringify": "^6.1.0",
    "escodegen": "^2.0.0",
    "html-entities": "^2.3.3",
    "html-tags": "^3.2.0",
    "svg-tags": "^1.0.0",
    "webpack-sources": "^3.2.3"
  },
  "devDependencies": {
    "@types/estree": "^0.0.51",
    "@types/node": "^17.0.38",
    "@types/svg-tags": "^1.0.0",
    "@types/webpack-sources": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.42",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "source-map": "^0.7.3",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1"
  }
}
