{
  "name": "jinge-compiler",
  "version": "3.3.0",
  "description": "Compiler for Jinge mvvm framework",
  "main": "lib/index.js",
  "module": "es/index.mjs",
  "types": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./lib && node ./scripts/esbuild.js",
    "dev": "WATCH=true npm run build",
    "lint": "tsc --noEmit && eslint './{src,scripts}/**/*.{js,ts}' --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jingeweb/jinge-compiler.git"
  },
  "license": "AGPL-3.0",
  "homepage": "https://github.com/jingeweb/jinge-compiler#readme",
  "bugs": {
    "url": "https://github.com/jingeweb/jinge-compiler/issues"
  },
  "keywords": [
    "mvvm",
    "spa"
  ],
  "author": "Yuhang Ge <abeyuhang@gmail.com>",
  "dependencies": {
    "@jingeweb/html5parser": "^0.0.4",
    "acorn": "^8.10.0",
    "acorn-walk": "^8.2.0",
    "csv-parse": "^5.4.0",
    "html-entities": "^2.4.0",
    "html-tags": "^3.3.1",
    "svg-tags": "^1.0.0"
  },
  "devDependencies": {
    "@types/estree": "^1.0.1",
    "@types/node": "^20.4.6",
    "@types/svg-tags": "^1.0.0",
    "@types/webpack-sources": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "chokidar": "^3.5.3",
    "esbuild": "^0.18.17",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "source-map": "^0.7.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2"
  }
}
