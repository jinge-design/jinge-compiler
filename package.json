{
  "name": "jinge-compiler",
  "version": "3.2.2",
  "description": "Compiler for Jinge mvvm framework",
  "main": "lib/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./lib && node ./scripts/esbuild.js",
    "dev": "WATCH=true npm run build",
    "lint": "tsc --noEmit && eslint './{src,scripts}/**/*.{js,ts}' --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jingeweb/jinge-compiler.git"
  },
  "license": "AGPL-3.0",
  "homepage": "https://github.com/jingeweb/jinge-compiler#readme",
  "bugs": {
    "url": "https://github.com/jingeweb/jinge-compiler/issues"
  },
  "keywords": [
    "mvvm",
    "spa"
  ],
  "author": "Yuhang Ge <abeyuhang@gmail.com>",
  "dependencies": {
    "@jingeweb/html5parser": "^0.0.4",
    "acorn": "^8.8.0",
    "acorn-walk": "^8.2.0",
    "csv-parse": "^5.3.0",
    "html-entities": "^2.3.3",
    "html-tags": "^3.2.0",
    "svg-tags": "^1.0.0"
  },
  "devDependencies": {
    "@types/estree": "^1.0.0",
    "@types/node": "^18.7.14",
    "@types/svg-tags": "^1.0.0",
    "@types/webpack-sources": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "chokidar": "^3.5.3",
    "esbuild": "^0.15.6",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "source-map": "^0.7.4",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0"
  }
}
